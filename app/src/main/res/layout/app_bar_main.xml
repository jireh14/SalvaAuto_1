<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_green_dark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_importantes3"
        android:backgroundTint="@color/design_default_color_primary_dark"
        />


    <TextView
        android:id="@+id/text_bienvenido"
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:text="BIENVENIDO A SALVA TU AUTO "
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|center" />

    <TextView
        android:id="@+id/text_segundo_titulo"
        android:layout_width="wrap_content"
        android:layout_height="375dp"
        android:text="Podrás obtener información de un Código de Falla sobre su descripción, sus causas y una imagen de la pieza que arroja el código de falla"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary"
        android:textSize="23sp"
        android:textStyle="normal"
        app:layout_anchor="@+id/image_logo"
        app:layout_anchorGravity="top|center" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/ic_menu4"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|center" />



</android.support.design.widget.CoordinatorLayout>